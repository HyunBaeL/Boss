<mapper namespace="boss.dao.MasterReportDao">

   <!-- 총신고글 갯수 -->
   <select id="total" resultType="int">
      select count(*) from
      report
   </select>

	<!-- 페이징 처리된 신고 리스트 -->
	<select id="list" parameterType="pagePgm"
		resultType="report">
		select *
		from (select rownum rnum, report.*
			  from (select *
		            from report order by reportanswer asc,reportreg desc) report)
		where rnum between
		#{startRow} and #{endRow}
	</select>

	<!-- 신고 게시글 상세정보 구하기 -->
	<select id="selectOne" parameterType="String"
		resultType="report">
		select * from report where reportid=#{reportid}
	</select>

