<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="boss.dao.MasterOrdersDao">

	<!-- list로 for문돌려서 where절에 가변적 처리 -->
	<delete id="delete" parameterType="java.util.List">
		delete from Orders
		where oid in
		<foreach item="oid" collection="list" open="(" separator=","
			close=")">
			#{oid}
		</foreach>
	</delete>
	<!-- 주문번호안에 pid목록들 -->
	<select id="">
		SELECT *
		FROM product p
		JOIN orderdetail od ON p.pid =
		od.pid
		JOIN orders o ON od.odid = o.oid
		WHERE od.oid = 1;

	</select>


	<!-- 한명의 주문정보를 구해옴. -->
	<select id="selectOne" resultType="orders"
		parameterType="string">
		SELECT * FROM Orders where oid = #{oid}
	</select>

	<!-- 한명의 주문에 대한 여러 상세 주문을 구해옴. -->
	<select id="odList" parameterType="string"
		resultType="orderDetail">
		select * from OrderDetail where oid=#{oid}
	</select>
	<!-- 페이징 처리 후 게시글 조회 -->
	<select id="list" resultType="orders" parameterType="pagePgm">
		SELECT *
		FROM (
		SELECT ROWNUM RN, A.*
		FROM (
		SELECT *
		FROM orders
		ORDER BY oreg DESC
		) A
		)
		WHERE RN BETWEEN #{startRow} AND #{endRow}
	</select>

	<!-- total구하기 -->
	<select id="total" resultType="int">
		SELECT COUNT(*) FROM orders
	</select>

</mapper>